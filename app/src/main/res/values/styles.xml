<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="edittext_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:background">@drawable/login_ll_background</item>
        <item name="android:divider">@drawable/login_divider_line</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
    </style>
    <style name="login_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/login_et_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="login_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--Customizer  CommonHeadView-->
    <declare-styleable name="ToolBarLayout">
        <attr name="tbTitle" format="reference|string" />
        <attr name="tbTitleVisiable" format="boolean" />
        <attr name="tbInfoLeft" format="reference|string" />
        <attr name="tbInfoRight" format="reference|string" />
        <attr name="tbInfoLeftVisiable" format="boolean" />
        <attr name="tbInfoRightVisiable" format="boolean" />
        <attr name="tbImgLeftVisiable" format="boolean" />
        <attr name="tbImgRightVisiable" format="boolean" />
        <attr name="tbImgLeft" format="reference" />
        <attr name="tbImgRight" format="reference" />
        <attr name="tbBackground" format="reference|color" />
        <attr name="tbBackgroundHeight" format="dimension" />
        <attr name="tbTitleTextColor" format="color" />
        <attr name="tbTitleTextSize" format="dimension" />
        <attr name="tbImgCenter" format="reference" />
        <attr name="tbImgCenterVisiable" format="boolean" />
    </declare-styleable>

    <!--HomeActivity atttibute-->
    <style name="creat_event_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bottom_tab_bg_selector</item>
    </style>

    <!--Animations for button HomeActivity-->
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

</resources>
