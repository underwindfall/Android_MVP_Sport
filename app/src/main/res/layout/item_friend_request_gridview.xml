<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:contentPadding="10dp"
    card_view:cardCornerRadius="10dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#559E9E9E">
    <ImageView
        android:layout_gravity="right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/annul"/>
    <com.sport.qifan.sport.custome.CircleImageView
        android:id="@+id/person_head"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginTop="85dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="user name"/>

    <TextView
        android:layout_marginTop="110dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/person_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="i want you"/>

    <Button
        android:layout_marginTop="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="top|center"
        android:text="+"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_light_green_background"/>
</android.support.v7.widget.CardView>